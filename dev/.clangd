CompileFlags:
  Add:
    [
      --std=c++20,
      -Wunused,
      -Wall,
      -Werror,
      -Wpedantic,
      -Wextra,
      # to suppress unknown opts set by e.g. Cmake in some parent directory
      -Wno-unknown-warning-option,
      -Werr,
      -Wconversion,
      # adds "include/" directory
      -Iinclude,
      -I-
    ]
Hover:
  ShowAKA: true
